<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.abdulrhman.testgame.GameActivity">

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/hangdroid_0"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:layout_height="400dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/holo_green_light"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:id="@+id/AddLetterCheck">

        <TextView
            android:text="insert letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_marginRight="20dp" />

        <EditText
            android:layout_width="47dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="20dp"
            android:maxLength="1" />

        <Button
            android:text="Check letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:onClick="checkletter" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AddLetterCheck"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:paddingBottom="20dp"
        android:id="@+id/layoutletter">

        <TextView
            android:text="_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:textSize="40dp"
            android:paddingRight="10dp" />
        <TextView
            android:text="_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:textSize="40dp"
            android:paddingRight="10dp" />
        <TextView
            android:text="_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:textSize="40dp"
            android:layout_marginRight="10dp" />
        <TextView
            android:text="_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:textSize="40dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="146dp"
        android:textSize="30dp"
        android:id="@+id/Tex"

        android:textColor="@color/red"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/AddLetterCheck"
        android:layout_alignStart="@+id/AddLetterCheck" />
</RelativeLayout>

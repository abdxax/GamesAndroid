<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_mulit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abdulrhman.testgame.GameMulit">

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/hangdroid_0"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView_multi"
        android:layout_height="400dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/holo_green_light"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:id="@+id/AddLetterCheck_multi">

        <TextView
            android:text="insert letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:textSize="30dp"
            android:layout_marginRight="20dp" />

        <EditText
            android:layout_width="47dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_multi"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="20dp"
            android:maxLength="1" />

        <Button
            android:text="Check letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chec_mulit"
            android:onClick="checkletter" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AddLetterCheck_multi"
        android:layout_marginBottom="16dp"
        android:layout_centerInParent="true"
        android:id="@+id/Liner"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_multi"
        android:layout_alignLeft="@+id/AddLetterCheck_multi"
        android:layout_alignStart="@+id/AddLetterCheck_multi"
        android:layout_marginTop="190dp"
        android:id="@+id/ress" />

</RelativeLayout>
